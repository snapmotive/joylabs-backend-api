{
  "name": "joylabs-backend-api-v3",
  "version": "1.0.0",
  "description": "JoyLabs Backend API v3",
  "main": "src/index.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.2.0"
  },
  "scripts": {
    "start": "serverless offline start",
    "dev": "NODE_ENV=development serverless offline start",
    "build": "serverless package",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json}\"",
    "typecheck": "tsc --noEmit",
    "deploy": "serverless deploy",
    "deploy:prod": "NODE_ENV=production serverless deploy --stage production",
    "deploy:function": "serverless deploy function",
    "deploy:layers": "./scripts/deploy-layers.sh",
    "deploy:function:api": "./scripts/deploy-function.sh api",
    "deploy:function:catalog": "./scripts/deploy-function.sh catalog",
    "deploy:function:webhooks": "./scripts/deploy-function.sh webhooks",
    "deploy:function:oauth": "./scripts/deploy-function.sh oauth",
    "create:layer": "./scripts/create-new-layer.sh",
    "check-sizes": "node scripts/check-package-sizes.js",
    "check-layer-sizes": "node scripts/check-layer-sizes.js",
    "install-layers": "chmod +x scripts/install-layers.sh && ./scripts/install-layers.sh",
    "prepare": "husky install"
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "api"
  ],
  "author": "JoyLabs",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-api-gateway": "^3.515.0",
    "@aws-sdk/client-cloudwatch": "^3.515.0",
    "@aws-sdk/client-dynamodb": "^3.515.0",
    "@aws-sdk/client-lambda": "^3.515.0",
    "@aws-sdk/client-secrets-manager": "^3.515.0",
    "@aws-sdk/client-sts": "^3.515.0",
    "@aws-sdk/lib-dynamodb": "^3.515.0",
    "@aws-sdk/util-dynamodb": "^3.515.0",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "connect-dynamodb": "^3.0.5",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "expo-server-sdk": "^3.15.0",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "serverless-http": "^3.2.0",
    "square": "^42.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@serverless/utils": "^6.15.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "babel-loader": "^9.1.3",
    "core-js": "^3.36.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "serverless": "^4.10.1",
    "serverless-offline": "^14.0.0",
    "serverless-webpack": "^5.13.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
